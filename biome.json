{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [".next/**", "./src/generated/**"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 2,
		"lineEnding": "lf"
	},
	"css": {
		"parser": {
			"cssModules": true
		},
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"indentWidth": 2
		},
		"linter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"semicolons": "asNeeded",
			"trailingCommas": "es5",
			"jsxQuoteStyle": "double",
			"quoteStyle": "single",
			"indentWidth": 2
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"indentWidth": 2
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
